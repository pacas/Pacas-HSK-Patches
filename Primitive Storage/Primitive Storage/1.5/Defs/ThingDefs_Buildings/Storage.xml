    <!-- ==================== Clay Pots ==================== -->

    <ThingDef ParentName="VBY_NeolithicStorageBase">
        <defName>VBY_Clay_Pot</defName>
        <label>stone pot</label>
        <description>A stone pot for storage.</description>
        <graphicData>
            <texPath>Things/HMC_Clay_Pot/HMC_Clay_Pot</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(1,1)</drawSize>
            <drawRotated>false</drawRotated>
        </graphicData>
        <defaultPlacingRot>South</defaultPlacingRot>
        <uiIconPath>Things/HMC_Clay_Pot/HMC_Clay_Pot</uiIconPath>
        <castEdgeShadows>false</castEdgeShadows>
        <pathCost>40</pathCost>
        <fillPercent>0.3</fillPercent>
        <size>(1,1)</size>
        <statBases>
            <Beauty>3</Beauty>
            <MaxHitPoints>30</MaxHitPoints>
            <WorkToMake>6000</WorkToMake>
            <!--<WorkToBuild>600</WorkToBuild>-->
            <Flammability>0.5</Flammability>
            <Mass>8</Mass>
        </statBases>
        <stuffCategories>
            <li>Stony</li>
        </stuffCategories>
        <costStuffCount>30</costStuffCount>
        <building>
            <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
            <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
            <fixedStorageSettings>
                <priority>Important</priority>
                <filter>
                    <categories>
                        <li>Medicine</li>
                        <li>Drugs</li>
                        <li>PlantMatter</li>
                        <li>FoodRaw</li>
                    </categories>
                    <disallowedCategories>
                        <li>Preserves</li>
                        <li>Alcohol</li>
                    </disallowedCategories>
                </filter>
            </fixedStorageSettings>
            <isInert>true</isInert>
            <paintable>true</paintable>
        </building>
        <comps>
            <li Class="LWM.DeepStorage.Properties">
                <maxNumberStacks>3</maxNumberStacks>
                <minTimeStoringTakes>45</minTimeStoringTakes>
                <additionalTimeEachStack>10</additionalTimeEachStack>
                <additionalTimeEachDef>120</additionalTimeEachDef>
                <showContents>false</showContents>
                <overlayType>SumOfItemsPerCell</overlayType>
                <maxTotalMass>25</maxTotalMass>
            </li>
            <li><compClass>CompQuality</compClass></li>
        </comps>
    </ThingDef>

