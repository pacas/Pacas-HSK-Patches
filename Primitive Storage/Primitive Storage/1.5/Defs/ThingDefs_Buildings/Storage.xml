    <!-- ==================== Wood Pile ==================== -->
  
    <ThingDef ParentName="LWM_DeepStorage">
        <defName>VBY_WoodPile</defName>
        <label>wood pile</label>
        <description>A wood pile for stacking wood. Costs 75 wood logs to build. Deconstructing returns 100% of wood logs used to build.</description>
        <graphicData>
            <texPath>Things/HMC_pileoflogs/HMC_pileoflogs</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(4,2)</drawSize>
            <drawRotated>false</drawRotated>
        </graphicData>
        <defaultPlacingRot>South</defaultPlacingRot>
        <uiIconPath>Things/HMC_pileoflogs/HMC_pileoflogs_south</uiIconPath>
        <castEdgeShadows>true</castEdgeShadows>
        <rotatable>true</rotatable>
        <fillPercent>0.7</fillPercent>
        <pathCost>140</pathCost>
        <size>(3,1)</size>
        <minifiedDef Inherit="false"/>
        <thingCategories Inherit="false"/>
        <statBases>
            <Beauty>-4</Beauty>
            <MaxHitPoints>300</MaxHitPoints>
            <WorkToBuild>1000</WorkToBuild>
            <Flammability>5</Flammability>
            <Mass>75</Mass>
        </statBases>
        <stuffCategories>
            <li>WoodLogs</li>
        </stuffCategories>
        <costStuffCount>75</costStuffCount>
        <resourcesFractionWhenDeconstructed>1</resourcesFractionWhenDeconstructed>
        <building>
            <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
            <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
            <fixedStorageSettings>
                <filter>
                    <categories>
                        <li>Woody</li>
                        <li>Wooden</li>
                        <li MayRequire="ViTech.HCSKWood">FirewoodSeasoned</li>
                        <li MayRequire="ViTech.HCSKWood">FirewoodGreen</li>
                        <li MayRequire="ViTech.HCSKWood">RawLogs</li>
                        <li MayRequire="ViTech.HCSKWood">Hardwoods</li>
                        <li MayRequire="ViTech.HCSKWood">Softwoods</li>
                        <li MayRequire="ViTech.HCSKWood">Ultrahardwoods</li>
                        <li MayRequire="ViTech.HCSKWood">BambooLogs</li>
                        <li MayRequire="ViTech.HCSKWood">HardwoodLumber</li>
                        <li MayRequire="ViTech.HCSKWood">SoftwoodLumber</li>
                        <li MayRequire="ViTech.HCSKWood">UltrahardwoodLumber</li>
                        <li MayRequire="ViTech.HCSKWood">EngineeredLumber</li>
                    </categories>
                </filter>
            </fixedStorageSettings>
        </building>
        <comps>
            <li Class="LWM.DeepStorage.Properties">
                <minNumberStacks>1</minNumberStacks>
                <maxNumberStacks>3</maxNumberStacks>
                <timeStoringTakes>50</timeStoringTakes>
                <showContents>false</showContents>
                <overlayType>None</overlayType>
            </li>
        </comps>
        <researchPrerequisites Inherit="false"/>
    </ThingDef>
  
