<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <MemeDef MayRequire="Ludeon.RimWorld.Ideology">
    <defName>ReviaRaceSkarniteMeme</defName>
    <label>skarnite</label>
    <description>A person's greatest aspiration is to serve the bloody goddess, in all her forms. All hail Skarne!</description>
