        <li>memeAdjective->skarnite</li>
        <li>memeHyphenPrefix->skarnite</li>
        <li>memeConcept->bloodlust</li>
        <li>memeConcept->violence</li>
        <li>memeConcept->warfare</li>
        <li>memeConcept->death</li>
