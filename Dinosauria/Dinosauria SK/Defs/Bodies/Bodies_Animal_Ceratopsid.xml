<?xml version="1.0" encoding="utf-8" ?>

<!--
	Each coverage value is relative to its parent.
	Remaining body part coverage (100% minus coverage of all child nodes) is a chance to hit exactly this part.
	Damage "starts" at corePart, and then "goes deeper" until it hits remaining body part coverage or leaf node
  - this body part is then hit.
-->

<Defs>

  <BodyDef>
    <defName>Ceratopsid</defName>
    <label>ceratopsid</label>
    <corePart>
      <def>Body</def>
      <height>Middle</height>
      <depth>Outside</depth>
      <parts>
		<li>
			<def>Tail</def>
			<coverage>0.10</coverage>
		</li>
        <li>
          <def>Spine</def>
          <coverage>0.03</coverage>
          <depth>Inside</depth>
        </li>
        <li>
          <def>Stomach</def>
          <coverage>0.03</coverage>
          <depth>Inside</depth>
        </li>
        <li>
          <def>Heart</def>
          <coverage>0.03</coverage>
          <depth>Inside</depth>
        </li>
        <li>
          <def>Lung</def>
          <coverage>0.03</coverage>
          <depth>Inside</depth>
		  <customLabel>left lung</customLabel>
        </li>
        <li>
          <def>Lung</def>
          <coverage>0.03</coverage>
          <depth>Inside</depth>
		  <customLabel>right lung</customLabel>
        </li>
        <li>
          <def>Kidney</def>
          <coverage>0.03</coverage>
          <depth>Inside</depth>
		  <customLabel>left kidney</customLabel>
        </li>
        <li>
          <def>Kidney</def>
          <coverage>0.03</coverage>
          <depth>Inside</depth>
		  <customLabel>right kidney</customLabel>
        </li>
        <li>
          <def>Liver</def>
          <coverage>0.03</coverage>
          <depth>Inside</depth>
        </li>
        <li>
          <def>Neck</def>
          <coverage>0.30</coverage>
          <height>Top</height>
          <parts>
			<li>
              <def>Head</def>
              <coverage>0.80</coverage>
              <groups>
                <li>HeadAttackTool</li>
              </groups>
              <parts>
                <li>
                  <def>Skull</def>
                  <coverage>0.20</coverage>
                  <depth>Inside</depth>
                  <parts>
                    <li>
                      <def>Brain</def>
                      <coverage>0.7</coverage>
                      <depth>Inside</depth>
                    </li>
                  </parts>
                </li>
				<li>
					<def>Crest</def>
					<coverage>0.20</coverage>
				</li>
                <li>
                  <def>Eye</def>
                  <coverage>0.07</coverage>
				  <customLabel>left eye</customLabel>
                </li>
                <li>
                  <def>Eye</def>
                  <coverage>0.07</coverage>
				  <customLabel>right eye</customLabel>
                </li>
                <li>
                  <def>Nose</def>
                  <coverage>0.04</coverage>
                </li>
                <li>
                  <def>Beak</def>
                  <coverage>0.1</coverage>
                  <groups>
                    <li>Beak</li>
                  </groups>
                </li>
				<li>
                  <def>Horn</def>
				  <customLabel>left horn</customLabel>
                  <coverage>0.1</coverage>
                  <groups>
					<li>HornAttackTool</li>
                  </groups>
                </li>
                <li>
                  <def>Horn</def>
				  <customLabel>right horn</customLabel>
                  <coverage>0.1</coverage>
                  <groups>
					<li>HornAttackTool</li>
                  </groups>
                </li>
				<li>
                  <def>Horn</def>
				  <customLabel>front horn</customLabel>
                  <coverage>0.02</coverage>
                  <groups>
					<li>HornAttackTool</li>
                  </groups>
                </li>
              </parts>
            </li>
          </parts>
        </li>
        <li>
          <def>Leg</def>
		  <customLabel>front left leg</customLabel>
          <coverage>0.07</coverage>
          <height>Bottom</height>
          <groups>
            <li>FrontLeftLeg</li>
          </groups>
          <parts>
            <li>
              <def>Foot</def>
					<customLabel>front left foot</customLabel>
              <coverage>0.15</coverage>
            </li>
          </parts>
        </li>
        <li>
          <def>Leg</def>
					<customLabel>front right leg</customLabel>
          <coverage>0.07</coverage>
          <height>Bottom</height>
          <groups>
            <li>FrontRightLeg</li>
          </groups>
          <parts>
            <li>
              <def>Foot</def>
					<customLabel>front right foot</customLabel>
              <coverage>0.15</coverage>
            </li>
          </parts>
        </li>
        <li>
          <def>Leg</def>
					<customLabel>rear left leg</customLabel>
          <coverage>0.07</coverage>
          <height>Bottom</height>
          <parts>
            <li>
              <def>Foot</def>
					<customLabel>rear left foot</customLabel>
              <coverage>0.15</coverage>
            </li>
          </parts>
        </li>
        <li>
          <def>Leg</def>
					<customLabel>rear right leg</customLabel>
          <coverage>0.07</coverage>
          <height>Bottom</height>
          <parts>
            <li>
              <def>Foot</def>
					<customLabel>rear right foot</customLabel>
              <coverage>0.15</coverage>
            </li>
          </parts>
        </li>
      </parts>
    </corePart>
  </BodyDef>

</Defs>