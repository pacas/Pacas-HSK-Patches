				</capacities>
				<power>23</power>
				<cooldownTime>5</cooldownTime>
				<linkedBodyPartsGroup>RH_LeftClaw</linkedBodyPartsGroup>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>30</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<label>right claw</label>
				<capacities>
					<li>Scratch</li>
				</capacities>
				<power>27</power>
				<cooldownTime>4.5</cooldownTime>
				<linkedBodyPartsGroup>RH_RightClaw</linkedBodyPartsGroup>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>30</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
