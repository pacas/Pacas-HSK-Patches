<Defs>

    <!--============================== Drapes, Royalty stuff ==============================-->
  
    <ThingDef ParentName="SK_FurnitureBase">
        <defName>RH_Corpo_Drape</defName>
        <label>corpo drape</label>
        <description>A decorative sheet hanging from a vertical wooden frame. Appropriate for corporate rooms.</description>
        <!--<designationCategory>Furniture</designationCategory>-->
        <altitudeLayer>BuildingOnTop</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <fillPercent>0.40</fillPercent>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <WorkToBuild>2000</WorkToBuild>
            <Mass>15</Mass>
            <Flammability>1.0</Flammability>
            <Beauty>7.5</Beauty>
        </statBases>
        <stuffCategories>
            <li>Fabric</li>
            <li>Leathery</li>
        </stuffCategories>
        <costStuffCount>150</costStuffCount>
        <costList>
            <ComponentMedieval>12</ComponentMedieval>
        </costList>
        <canOverlapZones>true</canOverlapZones>
        <pathCost>14</pathCost>
        <rotatable>true</rotatable>
        <size>(2,1)</size>
        <uiIconOffset>(0, 0.15)</uiIconOffset>
        <filthLeaving>Filth_Trash</filthLeaving>
        <building>
            <destroySound>BuildingDestroyed_Soft_Medium</destroySound>
            <destroyShakeAmount>0</destroyShakeAmount>
        </building>
        <researchPrerequisites>
            <li>Construction_B1</li>
        </researchPrerequisites>
        <graphicData>
            <drawSize>(5.8,7.8)</drawSize>
            <texPath>Things/Building/Corpo_Furniture/Drape</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <shadowData>
                <volume>(2,0.5,0.3)</volume>
                <offset>(0,0,-0.2</offset>
            </shadowData>
            <damageData>
                <rectN>(0.1, 0.1, 1.8, 1.5)</rectN>
                <rectS>(0.1, 0.1, 1.8, 1.5)</rectS>
                <rectE>(0.25, 0.5, 0.5, 1.5)</rectE>
                <rectW>(0.25, 0.5, 0.5, 1.5)</rectW>
            </damageData>
        </graphicData>
    </ThingDef>
  
