<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Bed -->

    <ThingDef ParentName="SK_BedWithQualityBase">
        <defName>RH2_CorpoBed</defName>
        <label>corpo bed</label>
        <description>A cozy mattress and sheets on a sleek frame for resting. Comes with a smart mattress and sikly smooth duvet. Beautiful to look at during inspection.</description>
        <graphicData>
            <texPath>Things/Building/VOID_Beds/Corpo_Bed</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <drawSize>(2,2)</drawSize>
            <damageData>
                <rect>(0,0.05,1,1.95)</rect>
            </damageData>
        </graphicData>
        <comps>
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities>
                    <li>VitalsMonitor</li>
					<li>AdvancedVitalsMonitor</li>
					<li>Dresser</li>
					<li>EndTable</li>
					<li>EndTableSimple</li>
					<li>JournalTable</li>
					<li>HolographicCell</li>
					<li>medieval_surg_washpan</li>  
					<li>medieval_surg_instruments</li>
					<li>medieval_surg_lamp</li>
					<li>industrial_surg_instruments</li>
					<li>industrial_surg_lamp</li>
					<li>space_surg_instruments</li>
					<li>space_surg_lamp</li>
                    <li MayRequire="CP.Uncle.Boris.Used.Furniture">RH2_ClassicFootlocker</li>
                    <li MayRequire="CP.Uncle.Boris.Used.Furniture">RH2_LampEndTable</li>
                    <li MayRequire="CP.Uncle.Boris.Used.Furniture">RH2_DoubleWardrobe</li>
                    <li MayRequire="CP.Uncle.Boris.Used.Furniture">RH2_MilitaryCrateDresser</li>
                    <li MayRequire="Ludeon.RimWorld.Ideology">SleepAccelerator</li>
                </linkableFacilities>
            </li>
        </comps>
        <statBases>
            <Beauty>8</Beauty>
            <WorkToBuild>800</WorkToBuild>
            <Mass>20</Mass>
            <Bulk>60</Bulk>
            <BedRestEffectiveness>0.96</BedRestEffectiveness>
            <Comfort>0.9</Comfort>
            <ImmunityGainSpeedFactor>1.04</ImmunityGainSpeedFactor>
            <SurgerySuccessChanceFactor>0.9</SurgerySuccessChanceFactor>
        </statBases>
        <size>(1,2)</size>
        <stuffCategories>
			<li>Fabric</li>
			<li>HF</li>
		</stuffCategories>
		<costStuffCount>45</costStuffCount>
		<costList>
			<Plasteel>10</Plasteel>
			<TitaniumBar>10</TitaniumBar>
			<ComponentIndustrial>3</ComponentIndustrial>
		</costList>
        <building>
            <bed_showSleeperBody>False</bed_showSleeperBody>
            <bed_healPerDay>4</bed_healPerDay>
        </building>
        <staticSunShadowHeight>0.17</staticSunShadowHeight>
        <castEdgeShadows>True</castEdgeShadows>
        <researchPrerequisites>
			<li>Beds_B1</li>
		</researchPrerequisites>
        <uiIconScale>0.90</uiIconScale>
		<constructionSkillPrerequisite>7</constructionSkillPrerequisite>
    </ThingDef>
  
