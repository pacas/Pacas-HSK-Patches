                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Apparel/Shell/Cloak/WastelandCloak</wornGraphicPath>
            <layers>
                <li>Shell</li>
            </layers>
            <tags>
                <li>RH_Cloak_DF</li>
                <li>RH_Shell_VOID</li>
                <li>PassiveCamo_Black_Set</li>
                <li>RoyalTier7</li>
            </tags>
            <defaultOutfitTags>
                <li>Worker</li>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
        <colorGenerator Class="ColorGenerator_Options">
            <options>
                <li>
                    <weight>10</weight>
                    <only>(48, 35, 29)</only>
                </li>
                <li>
                    <weight>10</weight>
                    <only>(156, 156, 156)</only>
                </li>
                <li>
                    <weight>30</weight>
                    <only>(64, 56, 48)</only>
                </li>
                <li>
                    <weight>6</weight>
                    <min>(82, 82, 82)</min>
                    <max>(36, 36, 36)</max>
                </li>
                <li>
                    <weight>2</weight>
                    <min>(89, 51, 51)</min>
                    <max>(64, 32, 32)</max>
                </li>
            </options>
        </colorGenerator>
        <recipeMaker>
            <researchPrerequisite>Fabrication</researchPrerequisite>
