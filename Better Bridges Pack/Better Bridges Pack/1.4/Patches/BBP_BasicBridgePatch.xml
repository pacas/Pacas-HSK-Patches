<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/TerrainDef[defName="Bridge"]/label/text()</xpath>
        <value>wooden bridge</value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/TerrainDef[defName="Bridge"]</xpath>
        <value>
            <isPaintable>true</isPaintable>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/TerrainDef[defName="Bridge"]/texturePath</xpath>
        <value>
            <texturePath>Terrain/Surfaces/WoodFloor</texturePath>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/TerrainDef[defName="Bridge"]</xpath>
        <value>
            <color>(108,78,55)</color>
        </value>
    </Operation>
</Patch>