<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="BuildingBase">
        <defName>GloomyDeco_Scarecrow</defName>
        <label>scarecrow</label>
        <description>A cute scarecrow. It does not seem to retain its purpose of scaring crows.</description>
        <soundImpactDefault>BulletImpact_Ground</soundImpactDefault>
        <graphicData>
            <texPath>GloomyDeco/Scarecrow</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(1.4,1.4)</drawSize>
            <damageData>
                <rect>(0.1,0.1,0.8,0.8)</rect>
            </damageData>
            <shadowData>
                <volume>(0.2,0.6,0.2)</volume>
                <offset>(0,0,0.0)</offset>
            </shadowData>
        </graphicData>
        <altitudeLayer>LowPlant</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <pathCost>20</pathCost>
        <canOverlapZones>true</canOverlapZones>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <WorkToBuild>600</WorkToBuild>
            <Flammability>1.0</Flammability>
            <Mass>6</Mass>
            <Beauty>15</Beauty>
        </statBases>
        <size>(1,1)</size>
        <stuffCategories>
            <li>Woody</li>
        </stuffCategories>
        <costStuffCount>10</costStuffCount>
        <costList>
            <Cloth>40</Cloth>
        </costList>
        <defaultPlacingRot>South</defaultPlacingRot>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <designationCategory>Furniture</designationCategory>
        <!-- custom -->
        <resourcesFractionWhenDeconstructed>0.2</resourcesFractionWhenDeconstructed>
        <thingClass>GloomyDeco.GloomyDeco_Scarecrow</thingClass>
    </ThingDef>
</Defs>