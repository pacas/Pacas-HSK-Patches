<Defs>
    <!-- QR Shield Belt -->
    <ThingDef ParentName="ApparelShieldBase">
        <defName>Apparel_QRShieldBelt</defName>
        <label>quick-recharge shield belt</label>
        <description>A single-person energy shield device. It will attempt to stop any rapidly-moving projectile or energy attack that comes from a distance. It does nothing against melee attacks or shots from point-blank range. It also prevents firing past touch range.\n\nThis advanced version recharges more quickly at the cost of a reduced maximum charge.</description>
        <graphicData>
            <texPath>Things/Pawn/Humanlike/Apparel/ShieldBelt/ShieldBelt</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <tickerType>Normal</tickerType>
        <statBases>
            <Mass>3</Mass>
            <Bulk>4</Bulk>
            <WornBulk>2</WornBulk>
            <EquipDelay>1.7</EquipDelay>
            <StuffEffectMultiplierInsulation_Cold>0.10</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
            <StuffEffectMultiplierArmor>0.8</StuffEffectMultiplierArmor>
            <ArmorRating_Sharp>0</ArmorRating_Sharp>
            <ArmorRating_Blunt>0</ArmorRating_Blunt>
            <ArmorRating_Heat>0</ArmorRating_Heat>
            <EnergyShieldRechargeRate>0.6</EnergyShieldRechargeRate>
            <EnergyShieldEnergyMax>2.70</EnergyShieldEnergyMax>
            <WorkToMake>20000</WorkToMake>
        </statBases>
        <stuffCategories>
            <li>StrongMetallic</li>
        </stuffCategories>
        <costStuffCount>50</costStuffCount>
        <costList>
            <ComponentAdvanced>3</ComponentAdvanced>
            <Electronics>3</Electronics>
            <DepletedUranium>5</DepletedUranium>
        </costList>
        <recipeMaker>
            <skillRequirements>
                <Crafting>14</Crafting>
            </skillRequirements>
            <workSpeedStat>SmithingSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <effectWorking>Smith</effectWorking>
            <soundWorking>Recipe_Machining</soundWorking>
            <recipeUsers>
                <li>TableElectronics</li>
            </recipeUsers>
            <useIngredientsForColor>false</useIngredientsForColor>
            <unfinishedThingDef>UnfinishedBelt</unfinishedThingDef>
            <researchPrerequisite>QRShieldBelts</researchPrerequisite>
        </recipeMaker>
        <comps>
			<li Class="CompProperties_Shield" />
		</comps>
        <thingCategories>
            <li>SpecialApparelCat</li>
            <li>ApparelUtility</li>
        </thingCategories>
        <tradeTags>
			<li>Armor</li>
		</tradeTags>
        <apparel>
            <countsAsClothingForNudity>false</countsAsClothingForNudity>
            <careIfWornByCorpse>false</careIfWornByCorpse>
            <careIfDamaged>false</careIfDamaged>
            <wearPerDay>0</wearPerDay>
            <bodyPartGroups>
                <li>Waist</li>
            </bodyPartGroups>
            <layers>
                <li>Belt</li>
            </layers>
            <tags>
                <li>BeltDefense</li>
            </tags>
            <useDeflectMetalEffect>true</useDeflectMetalEffect>
            <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
        </apparel>
        <generateCommonality>0.2</generateCommonality>
        <colorGenerator Class="ColorGenerator_Options">
            <options>
                <li>
                    <weight>10</weight>
                    <only>RGBA(0.33,0.33,0.33,1)</only>
                </li>
                <li>
                    <weight>10</weight>
                    <only>RGBA(0.65,0.65,0.65,1)</only>
                </li>
                <li>
                    <weight>6</weight>
                    <min>RGBA(0.3,0.3,0.3,1)</min>
                    <max>RGBA(0.5,0.5,0.5,1)</max>
                </li>
                <li>
                    <weight>10</weight>
                    <only>RGBA(0.9,0.9,0.9,1)</only>
                </li>
            </options>
        </colorGenerator>
        <techLevel>Spacer</techLevel>
    </ThingDef>
  
  
