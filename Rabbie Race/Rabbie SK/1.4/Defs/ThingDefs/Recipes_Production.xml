        <allowMixingIngredients>true</allowMixingIngredients>
        <targetCountAdjustment>50</targetCountAdjustment>
        <recipeUsers>
            <li>RB_MoonTailoringBench</li>
        </recipeUsers>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Hyperweave</li>
                    </thingDefs>
                </filter>
                <count>20</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Compaste</li>
                    </thingDefs>
                </filter>
                <count>5</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Biomatter</li>
                    </thingDefs>
                </filter>
                <count>30</count>
