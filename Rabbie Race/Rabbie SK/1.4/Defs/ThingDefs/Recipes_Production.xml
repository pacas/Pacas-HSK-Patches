<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <RecipeDef>
        <defName>Make_Moonthread</defName>
        <label>make moonthread</label>
        <description>Using fiber and various kinds of organic and silver we can make the moon's synthetic fabric.</description>
        <jobString>Making moonthread</jobString>
        <workSpeedStat>TailoringSpeed</workSpeedStat>
        <effectWorking>Tailor</effectWorking>
        <soundWorking>Recipe_Machining</soundWorking>
        <workAmount>1800</workAmount>
        <allowMixingIngredients>true</allowMixingIngredients>
        <targetCountAdjustment>50</targetCountAdjustment>
        <recipeUsers>
            <li>RB_MoonTailoringBench</li>
        </recipeUsers>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Cloth</li>
                    </thingDefs>
                </filter>
                <count>40</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Compaste</li>
                    </thingDefs>
                </filter>
                <count>5</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>SilverBar</li>
                    </thingDefs>
                </filter>
                <count>5</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Synthread</li>
                    </thingDefs>
                </filter>
                <count>15</count>
            </li>
            <li>
                <filter>
                    <categories>
                        <li>Leathers</li>
                    </categories>
                    <disallowedThingDefs>
                        <li>Leather_Thrumbo</li>
                        <li>Chitin</li>
                        <li>Leather_Patch</li>
                        <li>Leather_Human</li>
                    </disallowedThingDefs>
                </filter>
                <count>15</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>Leathers</li>
            </categories>
            <disallowedThingDefs>
                <li>Leather_Thrumbo</li>
                <li>Leather_Patch</li>
                <li>Leather_Human</li>
                <li>Chitin</li>
            </disallowedThingDefs>
        </fixedIngredientFilter>
        <products>
            <Moonthread>50</Moonthread>
        </products>
        <researchPrerequisite>Moonthread</researchPrerequisite>
        <workSkill>Crafting</workSkill>
    </RecipeDef>

  
    <RecipeDef>
