<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <RecipeDef>
        <defName>AutopsyBasic</defName>
        <label>butcher for organs</label>
        <description>Butchers a creature to obtain its internal organs while still fresh.</description>
        <jobString>Butchering.</jobString>
        <workAmount>1000</workAmount>
        <workSpeedStat>MedicalOperationSpeed</workSpeedStat>
        <workerClass>Autopsy.Patches.AutopsyWorker</workerClass>
        <workSkill>Medicine</workSkill>
        <effectWorking>ButcherFlesh</effectWorking>
        <soundWorking>Recipe_ButcherCorpseFlesh</soundWorking>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Corpses</li>
                    </categories>
                </filter>
                <count>1</count>
            </li>
            <li>
                <filter>
                    <categories>
                        <li>Medicine</li>
                    </categories>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>Corpses</li>
                <li>Medicine</li>
            </categories>
            <specialFiltersToAllow>
                <li>PossibleToHarvest</li>
            </specialFiltersToAllow>
            <disallowedCategories>
                <li>CorpsesMechanoid</li>
                <li>CorpsesAnimal</li>
            </disallowedCategories>
            <specialFiltersToDisallow>
                <li>AllowRotten</li>
                <li>ImpossibleToHarvest</li>
            </specialFiltersToDisallow>
        </fixedIngredientFilter>
        <defaultIngredientFilter>
            <thingDefs>
                <li>Corpse_Human</li>
                <li>MedicineHerbal</li>
                <li>Bandagekitcrude</li>
                <li>MushroomTincture</li>
                <li>HealrootTincture</li>
                <li>GleamcapStem</li>
                <li MayRequire="sarg.alphaanimals">AA_CactipineQuill</li>
            </thingDefs>
            <specialFiltersToAllow>
                <li>AllowCorpsesColonist</li>
                <li>AllowCorpsesStranger</li>
                <li>DoesntHaveBionics</li>
            </specialFiltersToAllow>
            <specialFiltersToDisallow>
                <li>HasBionics</li>
            </specialFiltersToDisallow>
            <disallowedThingDefs>
                <li>MedicineUltratech</li>
                <li>MedicineIndustrial</li>
            </disallowedThingDefs>
        </defaultIngredientFilter>
        <researchPrerequisite>BasicAutopsy</researchPrerequisite>
    </RecipeDef>

