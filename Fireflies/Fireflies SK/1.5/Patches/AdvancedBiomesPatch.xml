<?xml version="1.0" encoding="utf-8" ?>

<Patch>

    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Advanced Biomes (Continued)</li>
		</mods>

		<match Class="PatchOperationSequence">
			<!-- <success>Always</success> --> <!-- TESTING -->
			<operations>

				<!--==================== Firefly Adv. Biomes Spawning ====================-->

				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/Fireflies.FireflySettingsDef[defName="FireflySettings"]/maxGroupsByBiome</xpath>
					<value>

						<PoisonForest>2</PoisonForest>
						<Savanna>3</Savanna>
						<Volcano>1</Volcano>
						<Wasteland>1</Wasteland>
						<Wetland>2</Wetland>	

					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>