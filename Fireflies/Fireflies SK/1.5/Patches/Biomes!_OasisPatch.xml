<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Biomes! Oasis</li>
		</mods>

		<match Class="PatchOperationSequence">
			<!-- <success>Always</success> --> <!-- TESTING -->
			<operations>

				<!--==================== Firefly Biomes! Oasis Spawning ====================-->

				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/Fireflies.FireflySettingsDef[defName="FireflySettings"]/maxGroupsByBiome</xpath>
					<value>

						<BMT_ChromaticOasis>3</BMT_ChromaticOasis>

					</value>
				</li>

            </operations>
		</match>
	</Operation>

</Patch>