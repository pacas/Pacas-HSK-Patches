            <li>
                <bodyGraphicData>
                    <texPath>Things/Pawn/Animal/Firefly/Base/Firefly</texPath>
                    <drawSize>1</drawSize>
                    <shaderType>Transparent</shaderType>
                </bodyGraphicData>
                <dessicatedBodyGraphicData>
                    <texPath>Things/Pawn/Animal/Firefly/FF_Dessicated_Firefly</texPath>
                    <drawSize>0.08</drawSize>
                </dessicatedBodyGraphicData>
            </li>
            <li>
                <bodyGraphicData>
                    <texPath>Things/Pawn/Animal/Firefly/Base/Firefly</texPath>
                    <drawSize>1</drawSize>
                    <shaderType>Transparent</shaderType>
                </bodyGraphicData>
                <dessicatedBodyGraphicData>
                    <texPath>Things/Pawn/Animal/Firefly/FF_Dessicated_Firefly</texPath>
