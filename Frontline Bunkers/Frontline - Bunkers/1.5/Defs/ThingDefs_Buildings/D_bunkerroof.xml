<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--============== Bunkerroof 3x3 ===============-->
  <ThingDef ParentName="SK_BuildingBase" Name="Bunkerroof3x3tr">
    <defName>Bunkerroof3x3tr</defName>
    <label>Bunkerroof-3x3</label>
    <thingClass>Building</thingClass>
    <designationCategory>Security</designationCategory>
    <researchPrerequisites>
      <li>Bunker1</li>
    </researchPrerequisites>
    <description>Roof of your bunker - Size 3x3</description>
    <graphicData>
      <texPath>Bunker/3x3/bunkerroof</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(3.1,3.1)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <uiIconPath>Bunker/3x3/bunkerroof_Icon</uiIconPath>
    <!--<altitudeLayer>MoteOverhead</altitudeLayer>-->
    <altitudeLayer>MoteLow</altitudeLayer>
    <passability>Standable</passability>
    <pathCost>0</pathCost>
    <pathCostIgnoreRepeat>false</pathCostIgnoreRepeat>
    <fillPercent>0</fillPercent>
    <castEdgeShadows>false</castEdgeShadows>
    <costStuffCount>70</costStuffCount>
    <stuffCategories>
      <li>Stony</li>
      <li>Bricks</li>
    </stuffCategories>
    <costList>
      <Plasteel>25</Plasteel>
      <ConcreteResource>25</ConcreteResource>
      <ReinforcedConcrete>10</ReinforcedConcrete>
    </costList>
    <damageMultipliers>
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>2</multiplier>
      </li>
    </damageMultipliers>
    <defaultPlacingRot>South</defaultPlacingRot>
    <statBases>
      <MaxHitPoints>1500</MaxHitPoints>
      <WorkToBuild>5000</WorkToBuild>
      <Flammability>0.0</Flammability>
    </statBases>
    <size>(1,1)</size>
    <staticSunShadowHeight>0</staticSunShadowHeight>
    <canOverlapZones>false</canOverlapZones>
  </ThingDef>
