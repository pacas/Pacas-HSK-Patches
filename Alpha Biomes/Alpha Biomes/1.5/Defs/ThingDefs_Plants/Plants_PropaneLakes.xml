<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!--============================ Flowers =============================-->
    <ThingDef ParentName="SK_BushBase">
        <defName>AB_CrystalHorn</defName>
        <label>crystal horn</label>
        <thingClass>AlphaBiomes.Plant_Cold</thingClass>
        <description>This strange flower seems to be only partially organic. Part of its structure is clearly crystalline, and it appears to be unaffected, or even bolstered, by the extremely cold climate. It might even be edible.\n\nPlant details: Crystal horn is a wild plant that cannot be cultivated, and it needs minimum terrain fertility of 0.25. It grows in low temperatures (above -70ºC) and needs no light. Can be harvested for raw crystal horn.</description>
        <descriptionHyperlinks>
            <ThingDef>AB_RawCrystalHorn</ThingDef>
        </descriptionHyperlinks>
        <graphicData>
            <texPath>Things/Plants/AB_CrystalHorn</texPath>
            <graphicClass>Graphic_Random</graphicClass>
            <shadowData>
                <volume>(0.55, 0.17, 0.15)</volume>
                <offset>(0,0,-0.2)</offset>
            </shadowData>
        </graphicData>
        <statBases>
            <MaxHitPoints>250</MaxHitPoints>
            <Beauty>2</Beauty>
            <Nutrition>0.35</Nutrition>
        </statBases>
        <plant>
            <neverBlightable>true</neverBlightable>
            <growMinGlow>0</growMinGlow>
            <growOptimalGlow>0</growOptimalGlow>
            <fertilityMin>0.25</fertilityMin>
            <wildClusterRadius>4</wildClusterRadius>
            <wildClusterWeight>7.5</wildClusterWeight>
            <visualSizeRange>0.8~1.2</visualSizeRange>
            <harvestYield>10</harvestYield>
            <harvestWork>250</harvestWork>
            <harvestTag>Standard</harvestTag>
            <harvestAfterGrowth>0.30</harvestAfterGrowth>
            <harvestedThingDef>AB_RawCrystalHorn</harvestedThingDef>
        </plant>
    </ThingDef>
