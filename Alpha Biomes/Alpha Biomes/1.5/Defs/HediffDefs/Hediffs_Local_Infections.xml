<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <HediffDef ParentName="InfectionBase">
        <defName>AB_SporesAllergy</defName>
        <label>allergy</label>
        <makesSickThought>true</makesSickThought>
        <description>This person has developed a strong allergy to airborne spores and / or plant pollen. This allergy will make breathing difficult, but it will go away (for now) if treated properly.</description>
        <tendable>true</tendable>
        <comps>
            <li Class="HediffCompProperties_TendDuration">
                <baseTendDurationHours>12</baseTendDurationHours>
                <severityPerDayTended>-0.0773</severityPerDayTended>
            </li>
            <li Class="HediffCompProperties_Immunizable">
                <severityPerDayNotImmune>0.2488</severityPerDayNotImmune>
                <immunityPerDaySick>0.2388</immunityPerDaySick>
                <severityPerDayImmune>-0.4947</severityPerDayImmune>
                <immunityPerDayNotSick>-0.06</immunityPerDayNotSick>
            </li>
        </comps>
        <stages>
            <li>
                <label>minor</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.05</offset>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <offset>-0.2</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.666</minSeverity>
                <label>major</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.1</offset>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <offset>-0.4</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.833</minSeverity>
                <label>extreme</label>
                <painOffset>0.05</painOffset>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.15</offset>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <offset>-0.6</offset>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>
