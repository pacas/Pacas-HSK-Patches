<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="BaseFilth">
        <defName>AB_SlagRubble</defName>
        <label>scattered slag</label>
        <graphicData>
            <texPath>Things/Filth/AB_SlagRubble</texPath>
        </graphicData>
        <filth>
            <cleaningWorkToReduceThickness>35</cleaningWorkToReduceThickness>
        </filth>
    </ThingDef>

    <ThingDef ParentName="BaseFilth">
        <defName>AB_Filth_Tar</defName>
        <label>tar puddle</label>
        <description>A puddle of flammable tar.</description>
        <thingClass>AlphaBiomes.Tar_Filth</thingClass>
        <useHitPoints>true</useHitPoints>
        <tickerType>Rare</tickerType>
        <statBases>
            <Beauty>-10</Beauty>
            <Cleanliness>-15</Cleanliness>
            <MaxHitPoints>150</MaxHitPoints>
            <Flammability>2.0</Flammability>
        </statBases>
        <graphicData>
            <texPath>Things/Filth/AB_TarPuddle</texPath>
            <graphicClass>Graphic_Random</graphicClass>
        </graphicData>
        <filth>
            <disappearsInDays>1~2</disappearsInDays>
            <rainWashes>true</rainWashes>
            <cleaningWorkToReduceThickness>70</cleaningWorkToReduceThickness>
            <canFilthAttach>true</canFilthAttach>
            <maxThickness>1</maxThickness>
            <cleaningSound>Interact_CleanFilth_Fluid</cleaningSound>
        </filth>
    </ThingDef>
</Defs>
