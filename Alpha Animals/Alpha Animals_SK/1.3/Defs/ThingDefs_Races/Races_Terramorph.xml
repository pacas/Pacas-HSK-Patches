<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!-- ============================================================ -->
    <ThingDef ParentName="SK_AnimalThingBase">
        <defName>AA_Terramorph</defName>
        <label>mineral terramorph</label>
        <description>This strange looking crustacean was created with a single goal in mind: mineral processing. The Terramorph can feed on iron compounds, and process them chemically to slowly turn them into a hardened mineral usually know as "sky steel", that is normally only found in asteroids.\n\nThe transmutation process is very slow, so the Terramorph needs to spend quite a lot of time surrounded by mined Steel lumps. The Terramorph can also slowly consume, but not convert, steel slag chunks.</description>
        <statBases>
            <MoveSpeed>1.8</MoveSpeed>
            <ComfyTemperatureMin>-40</ComfyTemperatureMin>
            <MarketValue>250</MarketValue>
            <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.75</ArmorRating_Sharp>
            <LeatherAmount>0</LeatherAmount>
            <MeatAmount>0</MeatAmount>
        </statBases>
        <tools>
            <li>
                <label>fangs</label>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>14</power>
                <cooldownTime>2.6</cooldownTime>
                <linkedBodyPartsGroup>TurtleBeakAttackTool</linkedBodyPartsGroup>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>4</power>
                <cooldownTime>1.65</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <chanceFactor>0.2</chanceFactor>
            </li>
        </tools>
        <comps>
            <li Class="AnimalBehaviours.CompProperties_EatWeirdFood">
                <customThingToEat>
                    <li>Steel</li>
                    <li>Plasteel</li>
                    <li>ChunkSlagSteel</li>
                </customThingToEat>
                <nutrition>1</nutrition>
                <digThingIfMapEmpty>true</digThingIfMapEmpty>
                <thingToDigIfMapEmpty>ChunkSlagSteel</thingToDigIfMapEmpty>
                <fullyDestroyThing>false</fullyDestroyThing>
                <percentageOfDestruction>0.2</percentageOfDestruction>
                <needsWater>false</needsWater>
            </li>
            <li Class="AnimalBehaviours.CompProperties_NearbyEffecter">
                <ticksConversionRate>40000</ticksConversionRate>
                <radius>6</radius>
                <thingsToAffect>
                    <li>Steel</li>
                </thingsToAffect>
                <thingsToConvertTo>
                    <li>AA_SkySteel_Ore</li>
                </thingsToConvertTo>
            </li>
        </comps>
        <race>
            <wildBiomes>
                <BorealForest>0.01</BorealForest>
                <Tundra>0.01</Tundra>
                <ColdBog>0.01</ColdBog>
                <TemperateForest>0.02</TemperateForest>
                <TemperateSwamp>0.02</TemperateSwamp>
                <TropicalRainforest>0.01</TropicalRainforest>
                <TropicalSwamp>0.01</TropicalSwamp>
                <AridShrubland>0.05</AridShrubland>
                <Desert>0.07</Desert>
                <ExtremeDesert>0.05</ExtremeDesert>
            </wildBiomes>
            <thinkTreeMain>VEF_AnimalWeirdEater</thinkTreeMain>
            <herdAnimal>false</herdAnimal>
            <predator>false</predator>
            <useMeatFrom>Elephant</useMeatFrom>
            <body>TurtleLike</body>
            <baseBodySize>1.5</baseBodySize>
            <baseHungerRate>0.1</baseHungerRate>
            <baseHealthScale>1</baseHealthScale>
            <foodType>VegetarianRoughAnimal</foodType>
            <wildness>0.65</wildness>
            <trainability>None</trainability>
            <gestationPeriodDays>8</gestationPeriodDays>
            <lifeExpectancy>15</lifeExpectancy>
            <lifeStageAges>
                <li>
                    <def>AnimalBaby</def>
                    <minAge>0</minAge>
                </li>
                <li>
                    <def>AnimalJuvenile</def>
                    <minAge>0.25</minAge>
                </li>
                <li>
                    <def>AnimalAdult</def>
                    <minAge>0.5</minAge>
                    <soundWounded>Pawn_Tortoise_Wounded</soundWounded>
                    <soundDeath>Pawn_Tortoise_Death</soundDeath>
                    <soundCall>Pawn_Tortoise_Call</soundCall>
                    <soundAngry>Pawn_Tortoise_Angry</soundAngry>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
        </race>
        <tradeTags>
            <li>AnimalUncommon</li>
        </tradeTags>
        <modExtensions>
            <li Class="AnimalBehaviours.AnimalStatExtension">
                <statToAdd>
                    <li>AA_PrimaryRole</li>
                    <li>AA_RangedAttacks</li>
                </statToAdd>
                <statValues>
                    <li>AA_Farm</li>
                    <li>AA_No</li>
                </statValues>
                <statDescriptions>
                    <li>AA_FarmBuildingDesc</li>
                    <li>AA_NoRanged</li>
                </statDescriptions>
            </li>
        </modExtensions>
    </ThingDef>
