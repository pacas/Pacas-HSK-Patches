    </graphicData>
	<uiIconPath>Things/Building/VFEI2_BlackEmpressThumper_MenuIcon</uiIconPath>
    <costList>
      <Steel>70</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <researchPrerequisites>
        <li>VFEI2_StandardHivetech</li>
		<li>Electricity</li>
    </researchPrerequisites>
    <comps>
