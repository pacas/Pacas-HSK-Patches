<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PlantBase">
    <defName>AA_Plant_PollenTrumpet</defName>
    <label>pollen trumpet</label>
    <description>A cultivated flower with a tubular structure and bright orange flowers when mature. Pollen trumpets are the favourite food source of empress butterflies.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>3</Beauty>
      <Nutrition>0.05</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plants/AA_PollenTrumpet</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>
    <ingestible>
      <canAutoSelectAsFoodForCaravan>false</canAutoSelectAsFoodForCaravan>
    </ingestible>
    <plant>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <sowWork>750</sowWork>
      <sowTags>
        <li>Ground</li>
        <li>Decorative</li>
      </sowTags>
      <growMinGlow>0.3</growMinGlow>
      <topWindExposure>0.1</topWindExposure>
      <growDays>0.5</growDays>
	  <immatureGraphicPath>Things/Plants/AA_PollenTrumpetImmature</immatureGraphicPath>
      <lifespanDaysPerGrowDays>250</lifespanDaysPerGrowDays>
      <visualSizeRange>0.6~1.05</visualSizeRange>
      <wildOrder>1</wildOrder>
      <purpose>Beauty</purpose>
    </plant>
  </ThingDef>

 

</Defs>
