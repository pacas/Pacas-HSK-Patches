                <eggLayIntervalDays>25</eggLayIntervalDays>
                <eggCountRange>
                    <min>1</min>
                    <max>3</max>
                </eggCountRange>
            </li>
        </comps>
        <race>
            <wildBiomes>
                <BorealForest>0.03</BorealForest>
                <ColdBog>0.07</ColdBog>
                <TemperateForest>0.03</TemperateForest>
