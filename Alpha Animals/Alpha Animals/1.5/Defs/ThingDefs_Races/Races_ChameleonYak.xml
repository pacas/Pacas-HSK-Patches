                <snowyHediffToApply>AA_WinterPelt</snowyHediffToApply>
                <snowySeasonalItemsIndex>1</snowySeasonalItemsIndex>
                <provideSeasonalItems>true</provideSeasonalItems>
                <seasonalItemsIndexes>
                    <li>1</li>
                    <li>2</li>
                    <li>2</li>
                    <li>2</li>
                    <li>3</li>
                    <li>3</li>
                </seasonalItemsIndexes>
            </li>
        </comps>
