<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/Tachyonite/Pawnmorpher/dev/Schemas/ComposableHediffs.xsd">
	<HediffDef ParentName="NewHerbavourMorphTfBase">
		<defName>AA_PawnmorphHelixienTF</defName>
		<hediffClass>Pawnmorph.Hediffs.Hediff_MutagenicBase</hediffClass>
		<label>helixienmorph</label>
		<description>This person has mechanites in their blood that are slowly mutating them into a helixienmorph. Keep an eye on them, as leaving the mechanites unattended could lead to them becoming far more slug than human.</description>
		<stages>
			<li Class="Pawnmorph.Hediffs.HediffStage_Transformation">
				<label>reeling</label>
				<hungerRateFactor>1.6</hungerRateFactor>
				<painOffset>0.05</painOffset>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
				<tfTypes Class="Pawnmorph.Hediffs.Composable.TFTypes_Morph">
					<morphDef>AA_HelixienMorph</morphDef>
				</tfTypes>
				<tfChance Class="Pawnmorph.Hediffs.Composable.TFChance_BySetting" />
				<tfSettings>
					<tfTale>TransformationMisc</tfTale>
				</tfSettings>
				<tfGenderSelector Class="Pawnmorph.Hediffs.Composable.TFGenderSelector_Swap">
					<chance>0.1</chance>
				</tfGenderSelector>
			</li>
			<li Class="Pawnmorph.Hediffs.HediffStage_MutagenicBase">
				<label>transforming</label>
				<minSeverity>0.6</minSeverity>
				<painOffset>0.1</painOffset>
				<vomitMtbDays>1</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
				<alert />
			</li>
			<li Class="Pawnmorph.Hediffs.HediffStage_Mutation">
				<label>changing</label>
				<minSeverity>0.65</minSeverity>
				<painOffset>0.1</painOffset>
				<vomitMtbDays>1</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.05</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
				<mutationTypes Class="Pawnmorph.Hediffs.Composable.MutTypes_Morph">
					<morphDef>AA_HelixienMorph</morphDef>
				</mutationTypes>
				<mutationRate Class="Pawnmorph.Hediffs.Composable.MutRate_MutationsPerDay">
					<meanMutationsPerDay>5</meanMutationsPerDay>
				</mutationRate>
				<spreadOrder Class="Pawnmorph.Hediffs.Composable.MutSpreadOrder_RandomSpread" />
			</li>
		</stages>
	</HediffDef>
</Defs>