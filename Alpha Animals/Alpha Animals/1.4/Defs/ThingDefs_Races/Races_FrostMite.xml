    <ThingDef ParentName="SK_AA_Insect">
        <defName>AA_Frostmite</defName>
        <label>frostmite</label>
        <description>A large parasite usually found in cold places. They sweep the cold barren lands in search of corpses buried in the snow, eating the preserved flesh and leaving a ravaged skeleton in its place; devoid of their former identity.</description>
        <statBases>
            <MoveSpeed>6.00</MoveSpeed>
            <ComfyTemperatureMin>-80</ComfyTemperatureMin>
            <ComfyTemperatureMax>15</ComfyTemperatureMax>
            <MarketValue>120</MarketValue>
            <ArmorRating_Blunt>1.2</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
            <MeatAmount>90</MeatAmount>
        </statBases>
        <tools>
            <li>
                <label>head-claw</label>
                <capacities>
                    <li>Cut</li>
                </capacities>
                <power>7</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>HeadClaw</linkedBodyPartsGroup>
            </li>
            <li>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>5</power>
                <cooldownTime>1.25</cooldownTime>
                <linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>2</power>
                <cooldownTime>1.65</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <chanceFactor>0.2</chanceFactor>
            </li>
        </tools>
        <comps>
            <li Class="AnimalBehaviours.CompProperties_DigWhenHungry">
                <isFrostmite>true</isFrostmite>
                <spawnForbidden>true</spawnForbidden>
                <digAnywayEveryXTicks>false</digAnywayEveryXTicks>
            </li>
        </comps>
        <race>
            <wildBiomes>
                <IceSheet>0.5</IceSheet>
                <Tundra>0.05</Tundra>
                <SeaIce>0.5</SeaIce>
                <ColdBog>0.03</ColdBog>
                <BorealForest>0.02</BorealForest>
            </wildBiomes>
            <herdAnimal>true</herdAnimal>
            <predator>false</predator>
            <body>BeetleLikeWithClaw</body>
            <baseBodySize>0.50</baseBodySize>
            <baseHungerRate>1.3</baseHungerRate>
            <baseHealthScale>0.8</baseHealthScale>
            <foodType>Corpse,Meat</foodType>
            <wildness>0.7</wildness>
            <roamMtbDays>5</roamMtbDays>
			<trainability>None</trainability>
            <gestationPeriodDays>30</gestationPeriodDays>
            <litterSizeCurve>
                <points>
                    <li>(0.5, 0)</li>
                    <li>(1, 1)</li>
                    <li>(2, 1.7)</li>
                    <li>(3, 0.7)</li>
                    <li>(3.5, 0)</li>
                </points>
            </litterSizeCurve>
            <lifeExpectancy>4</lifeExpectancy>
            <lifeStageAges>
