<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="SK_AnimalThingBase">
        <defName>AA_RedGoo</defName>
        <label>red goo</label>
        <description>This blob of bubbling organic matter seems to be an extension of the terrain itself, a disfigured excrescence given a semblance of life.\n\nThe red goo seem to thrive in the strangely alien environment of the ocular forest, nibbling on the aberrant vegetation and periodically cloning themselves. NOTE: due to gameplay constraints, red goo will only self-replicate until the map holds 15 creatures, cause I don't want to fry your computers.</description>
        <statBases>
            <MoveSpeed>1.5</MoveSpeed>
            <ComfyTemperatureMin>-100</ComfyTemperatureMin>
            <ComfyTemperatureMax>85</ComfyTemperatureMax>
            <MarketValue>150</MarketValue>
            <MeatAmount>0</MeatAmount>
            <LeatherAmount>0</LeatherAmount>
        </statBases>
        <tools>
            <li>
                <label>tentacles</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>12</power>
                <cooldownTime>1.4</cooldownTime>
                <linkedBodyPartsGroup>Arms</linkedBodyPartsGroup>
            </li>
        </tools>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <accuracyTouch>1</accuracyTouch>
                <accuracyShort>1</accuracyShort>
                <accuracyMedium>1</accuracyMedium>
                <accuracyLong>1</accuracyLong>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>AA_RedPoisonBolt</defaultProjectile>
                <warmupTime>3</warmupTime>
                <burstShotCount>1</burstShotCount>
                <minRange>2</minRange>
                <range>20</range>
                <soundCast>AA_PoisonBolt</soundCast>
                <muzzleFlashScale>0</muzzleFlashScale>
                <label>venomous spit</label>
                <commonality>.6</commonality>
            </li>
        </verbs>
        <tickerType>Normal</tickerType>
        <comps>
            <li Class="AnimalBehaviours.CompProperties_AsexualReproduction">
                <reproductionIntervalDays>10</reproductionIntervalDays>
                <customString>Cloning in: </customString>
                <isGreenGoo>true</isGreenGoo>
                <GreenGooLimit>15</GreenGooLimit>
                <GreenGooTarget>AA_RedGoo</GreenGooTarget>
            </li>
        </comps>
        <race>
            <deathActionWorkerClass>AlphaBehavioursAndEvents.DeathActionWorker_RedAcidExplosion</deathActionWorkerClass>
            <executionRange>6</executionRange>
            <herdAnimal>false</herdAnimal>
            <body>AA_GooBody</body>
            <baseBodySize>0.5</baseBodySize>
            <baseHealthScale>1</baseHealthScale>
            <baseHungerRate>0.005</baseHungerRate>
            <hasGenders>false</hasGenders>
            <foodType>VegetarianRoughAnimal</foodType>
            <useMeatFrom>Elephant</useMeatFrom>
            <wildness>0.6</wildness>
            <mateMtbHours>10000</mateMtbHours>
            <gestationPeriodDays>10000</gestationPeriodDays>
            <lifeExpectancy>10</lifeExpectancy>
            <lifeStageAges>
                <li>
                    <def>AnimalBaby</def>
                    <minAge>0</minAge>
                </li>
                <li>
                    <def>AnimalJuvenile</def>
                    <minAge>0.01</minAge>
                </li>
                <li>
                    <def>AnimalAdult</def>
                    <minAge>0.02</minAge>
                    <soundWounded>AA_GreenGoo_Wounded</soundWounded>
                    <soundDeath>AA_GreenGoo_Death</soundDeath>
                    <soundAngry>AA_GreenGoo_Angry</soundAngry>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
        </race>
        <butcherProducts>
            <AB_RawRedSlime>25</AB_RawRedSlime>
        </butcherProducts>
        <tradeTags>
            <li>AnimalExotic</li>
        </tradeTags>
        <modExtensions>
            <li Class="AnimalBehaviours.AnimalStatExtension">
                <statToAdd>
                    <li>AA_PrimaryRole</li>
                    <li>AA_RangedAttacks</li>
                </statToAdd>
                <statValues>
                    <li>AA_Boomer</li>
                    <li>AA_Yes</li>
                </statValues>
                <statDescriptions>
                    <li>AA_BoomerDesc</li>
                    <li>AA_Ranged</li>
                </statDescriptions>
            </li>
        </modExtensions>
    </ThingDef>
    <PawnKindDef ParentName="AnimalKindBase">
        <defName>AA_RedGoo</defName>
        <label>red goo</label>
        <race>AA_RedGoo</race>
        <combatPower>75</combatPower>
        <canArriveManhunter>false</canArriveManhunter>
        <ecoSystemWeight>0.01</ecoSystemWeight>
        <lifeStages>
            <li>
                <bodyGraphicData>
                    <texPath>Things/Pawn/Animal/AA_RedGoo/AA_RedGoo</texPath>
                    <drawSize>1.5</drawSize>
                </bodyGraphicData>
                <dessicatedBodyGraphicData>
                    <texPath>Things/Pawn/Animal/AA_RedGoo/AA_Dessicated_RedGoo</texPath>
                    <drawSize>1.5</drawSize>
                </dessicatedBodyGraphicData>
            </li>
            <li>
                <bodyGraphicData>
                    <texPath>Things/Pawn/Animal/AA_RedGoo/AA_RedGoo</texPath>
                    <drawSize>1.8</drawSize>
                </bodyGraphicData>
                <dessicatedBodyGraphicData>
                    <texPath>Things/Pawn/Animal/AA_RedGoo/AA_Dessicated_RedGoo</texPath>
                    <drawSize>1.8</drawSize>
                </dessicatedBodyGraphicData>
            </li>
            <li>
                <bodyGraphicData>
                    <texPath>Things/Pawn/Animal/AA_RedGoo/AA_RedGoo</texPath>
                    <drawSize>2.5</drawSize>
                </bodyGraphicData>
                <dessicatedBodyGraphicData>
                    <texPath>Things/Pawn/Animal/AA_RedGoo/AA_Dessicated_RedGoo</texPath>
                    <drawSize>2.5</drawSize>
                </dessicatedBodyGraphicData>
            </li>
        </lifeStages>
    </PawnKindDef>
</Defs>