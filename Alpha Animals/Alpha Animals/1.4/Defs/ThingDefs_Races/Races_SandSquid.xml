                    <li>AA_No</li>
                </statValues>
                <statDescriptions>
                    <li>AA_UtilityWorkerDesc</li>
                    <li>AA_NoRanged</li>
                </statDescriptions>
            </li>
        </modExtensions>
    </ThingDef>
