            <MoveSpeed>3.50</MoveSpeed>
            <ComfyTemperatureMin>-35</ComfyTemperatureMin>
            <MarketValue>550</MarketValue>
            <FilthRate>12</FilthRate>
        </statBases>
        <tools>
